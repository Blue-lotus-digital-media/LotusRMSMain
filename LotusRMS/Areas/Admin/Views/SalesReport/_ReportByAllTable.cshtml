@using LotusRMS.Models.Viewmodels.SalesReport;
@model List<SalesReportByAllTable>
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{

}

<table id="tblData" class="table table-striped table-bordered" style="width:100%">
    <thead class="thead-dark">
        <tr class="table-info">
            <th>S.N</th>
        <th>Table Type</th>
        <th>Table Name</th>
        <th>Total</th>
        <th>Discount</th>
        <th>GrandTotal</th>
        </tr>
    </thead>
    @if (Model != null || Model.Count() != 0)
    {
        <tbody>
            @foreach (var item in Model.Select((value, index) => (value, index)))
            {
                <tr>
                    <td>@{
                            var i = item.index + 1;
                        }@i</td>
                    <td>@item.value.TableType</td>
                    <td>@item.value.TableName</td>
                    <td>@item.value.Total</td>
                    <td>@item.value.Discount</td>
                    <td>@item.value.GrandTotal</td>
                </tr>
            }
        </tbody>
        <tfoot>
            <tr>
                <th colspan="3">Total</th>
                <th> @Model.Sum(x=>x.Total)</th>
                <th> @Model.Sum(x=>x.Discount)</th>
                <th> @Model.Sum(x=>x.GrandTotal)</th>
            </tr>
        </tfoot>
    }
    else
    {
        <tr>
            <td colspan="5">
                no any data found...
            </td>
        </tr>
    }
</table>

