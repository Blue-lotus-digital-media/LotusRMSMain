<style>
    .grids {
        display:grid;
        grid-template-columns:repeat(3,1fr) 5rem; 
        align-items:center;
        justify-content:center;
    }

    .form-input {
        background-color: #d3d3d3;
        border:none;
        padding:0.5rem;
        border-radius:0.5rem;   
        -webkit-transition: 0.1s;
        transition: 0.1s;
        outline: none;
    }

    .form-input:focus {
            border: 2px solid #0d6efd;
    }

  
    .btn-class {
        background-color: #d3d3d3!important;
        color:black !important;
        border:none!important;
    
    }

    .drop-class {
        background-color: #d3d3d3 !important;
    }
    .input-search {
        border:none;
        -webkit-transition: 0.1s;
        transition: 0.1s;
        outline: none;
        border-radius:0.5rem;
        align-self:stretch;
    }

    .input-search:focus {   
        border: 2px solid #0d6efd;
    }

    .btns-class {
        margin-top:2rem;
    }


</style>
<div class="row">
    <div class="col-12">
        <div class="card">  
            <div class="card-body mt-3">
               
                    <h5 class="card-title text-center fs-2">Sales Report</h5>
                  
                </div>
                <div class="row px-5 grids mb-3">
                <fieldset class="d-flex flex-column">
                    <label for="start-date" class="form-label label-class">Start Date</label>
                    <input type="date" id="start-date" class="form-input w-75">
                </fieldset>

                <fieldset class="d-flex flex-column">
                    <label for="end-date" class="form-label label-class">End Date</label>
                    <input type="date" id="end-date" class="form-input w-75" >
                </fieldset>



                <fieldset class="d-flex flex-column">
                    <label for="report-type" class="form-label label-class ">Report Type</label>
                    <div class="nav-item dropdown w-100">
                        <button class="dropdown-toggle btn btn-secondary btn-class w-100" data-bs-toggle="dropdown">Select Report Type</button>

                        <ul class="dropdown-menu  drop-class w-100">
                            <li>
                                <input class="dropdown-item mx-auto bg-white mb-1 input-search" placeholder="Search" style="width:85%">
                            </li>
                            <li>
                                <a href="#" class="dropdown-item fw-bold">Bill Wise</a>
                            </li>
                            <li>
                                <a href="#" class="dropdown-item fw-bold">Item Wise</a>
                            </li>
                            <li>
                                <button class="dropdown-item fw-bold">Table Wise</button>
                            </li>
                        </ul>
                    </div>
                </fieldset>
              

                <fieldset class="d-flex flex-column">
                    <label></label>
                    <button class="btn btn-secondary btns-class"><i class="fas fa-search"></i></button>
                </fieldset>
            
              

              


