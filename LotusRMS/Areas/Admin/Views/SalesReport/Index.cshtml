@{
}

<style>
    .grids {
        display:grid;
        grid-template-columns:repeat(4,1fr) 5rem; 
        align-items:center;
        justify-content:center;
    }

    .form-input {
        border:2px solid black;
        padding:0.5rem;
        border-radius:0.5rem;   
        -webkit-transition: 0.1s;
        transition: 0.1s;
        outline: none;
    }

    .form-input:focus {
            border: 2px solid #0d6efd;
    }

  
    .btn-class {
        background-color: #d3d3d3!important;
        color:black !important;
        border:none!important;
    
    }

    .drop-class {
        background-color: #d3d3d3 !important;
    }
    .input-search {
        border:none;
        -webkit-transition: 0.1s;
        transition: 0.1s;
        outline: none;
        border-radius:0.5rem;
        align-self:stretch;
    }

    .input-search:focus {   
        border: 2px solid #0d6efd;
    }

    .btns-class {
        margin-top:2rem;
    }


</style>
<div class="row">
    <div class="col-12">
        <div class="card">  
            <div class="card-body mt-2">
               
                    <h5 class="card-title text-center fs-2">Sales Report</h5>
                  
                </div>
                <div class="row px-3 grids mb-3">
                <fieldset class="d-flex flex-column">
                    <label for="start-date" class="form-label label-class">Start Date</label>
                    <input type="text" id="startDate" class="form-input w-75">
                </fieldset>

                <fieldset class="d-flex flex-column">
                    <label for="end-date" class="form-label label-class">End Date</label>
                    <input type="text" id="endDate" class="form-input w-75" >
                </fieldset>



                <fieldset class="d-flex flex-column">
                    <label for="report-type" class="form-label label-class ">Report Type</label>
                    <div class="nav-item dropdown w-100">
                      
                        <select id="reporttype" class="form-input" onchange="reportTypeChanged(this);" >
                            <option value="@SalesReportType.ReportType.item">@SalesReportType.ReportType.item.GetDisplayName()</option>
                            <option value="@SalesReportType.ReportType.table">@SalesReportType.ReportType.table.GetDisplayName()</option>
                            <option value="@SalesReportType.ReportType.customer">@SalesReportType.ReportType.customer.GetDisplayName()</option>
                            <option value="@SalesReportType.ReportType.user">@SalesReportType.ReportType.user.GetDisplayName()</option>
                        </select>


                    </div>
                </fieldset>
                <fieldset class="d-flex flex-column" id="selectDiv">
                    <label for="report-type" class="form-label label-class ">Select Item</label>
                    <div class="nav-item dropdown w-100">

                        <select id="selectItem" class="form-input w-100">
                            <option value="0">All</option>

                        </select>


                    </div>
                </fieldset>
              

                <fieldset class="d-flex flex-column">
                    <label></label>
                    <button class="btn btn-secondary btns-class" onclick="GetReport()"><i class="fas fa-search"></i></button>
                </fieldset>
            
              

              


