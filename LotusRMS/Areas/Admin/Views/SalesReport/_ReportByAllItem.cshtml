@using LotusRMS.Models.Viewmodels.SalesReport;
@model List<SalesReportByAllItem> 
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
}
<table id="tblData" class="table table-striped table-bordered" style="width:100%">
    <thead class="thead-dark">
        <tr class="table-info">
            <th>S.N</th>
            <th>Item Name</th>
            <th>Type/Category</th>
            <th>Unit</th>
            
            <th>Quantity</th>
        </tr>
    </thead>
    @if (Model != null || Model.Count() != 0)
    {
        <tbody>
            @foreach (var item in Model.Select((value, index) => (value, index)))
            {
                <tr>
                    <td>
                        @{
                            var i = item.index + 1;
                        }@i
                    </td>
                    <td>@item.value.Item_Name</td>
                    <td>@item.value.Type / @item.value.Category</td>
                    <td>@item.value.Unit_Division @item.value.Unit</td>
                    <td>@item.value.TotalSold</td>
                </tr>
            }
        </tbody>       
    }
    else
    {
        <tr>
            <td colspan="5">
                no any data found...
            </td>
        </tr>
    }
</table>




