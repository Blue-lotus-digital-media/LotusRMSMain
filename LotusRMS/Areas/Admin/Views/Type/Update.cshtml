@{
}

<div class="header">
    <h4>Update Product Type</h4>
</div>

<div class="row">
    <div class="col-md-6 ">
        <form class="form" asp-area="admin" asp-action="update" asp-controller="type">
            <input asp-for="Id" hidden />
        <div class="form-group">
            <label >Type Name</label>
            <input asp-for="Type_Name" class="form-control" pplaceholder="eg. food , eg. liquor"/>
            <span asp-validation-for="Type_Name" class="text-danger" ></span>
        </div>
    
        <div class="form-group">
            <label >Type Description</label>
            <input asp-for="Type_Description" class="form-control" placeholder="Write short discription of type.."/>
            <span asp-validation-for="Type_Description" class="text-danger"></span>
        </div>
            <div class="col-md-12 text-end">
           
                <button type="submit" class="btn btn-primary">Update</button>
            </div>
        </form>

    </div>
</div>