<div class="row">
    <div class="col-md-6 ">
        <div class="card">
            <div class="card-body">
                <h5 class="card-title">Create Table Type</h5>
                <form class="form" asp-area="admin" asp-action="create" asp-controller="tabletype" asp-route-returnUrl="@ViewBag.ReturnUrl">
                    <div class="form-group mb-3">
                        <label for="tType" class="mb-1">Type Name</label>
                        <input asp-for="Type_Name" class="form-control" placeholder="eg. cabin , eg. outdoor" id="tType" />
                        <span asp-validation-for="Type_Name" class="text-danger"></span>
                    </div>

                    <div class="form-group mb-3">
                        <label for="tDesc" class="mb-1">Type Description</label>
                        <input asp-for="Type_Description" class="form-control" placeholder="Write short description of type.." id="tDesc" />
                        <span asp-validation-for="Type_Description" class="text-danger"></span>
                    </div>
                    <div class="col-md-12 text-end">
                        <button type="reset" class="btn btn-danger me-3">Clear</button>
                        <button type="submit" class="btn btn-primary">Create</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
