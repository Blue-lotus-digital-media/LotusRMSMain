@using LotusRMS.Models.Viewmodels.Table
@model CreateTableVM
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
}

<div class="row">
    <div class="col-md-6">
        <div class="card">
            <div class="card-body">
                <h5 class="card-title">Create Table</h5>
                <!-- Vertical Form -->
                <form class="row g-3" asp-action="Create" asp-controller="Table" asp-area="Admin" asp-route-returnUrl="@ViewBag.ReturnUrl">
                    <div class="col-12">
                        <label for="cName" class="form-label">Table Name</label>
                        <input asp-for="Table_Name" class="form-control" id="cName">
                        <span asp-validation-for="Table_Name" class="text-danger"></span>
                    </div>
                    <div class="col-md-12">
                        <label for="tableNumber" class="form-label">Table number</label>
                        <input asp-for="Table_No" class="form-control" id="tableNumber" onclick="this.select();" />
                        <span asp-validation-for="Table_No" class="text-danger"></span>
                    </div>
                    <div class="col-md-12">
                        <label for="noOfChair" class="form-label">Total No. Of Chair</label>
                        <input asp-for="No_Of_Chair" class="form-control" id="noOfChair" onclick="this.select();" />
                        <span asp-validation-for="No_Of_Chair" class="text-danger"></span>
                    </div>
                    <div class="col-md-12">
                        <label for="typeText" class="form-label">Type</label>
                        <div class="row">
                            <div class="col-10">

                                <select asp-for="Table_Type_Id" class="form-control" id="typeText">
                                    <option>Select a type</option>
                                    @foreach (var item in Model.Table_Type_List)
                                    {
                                        <option value="@item.Value">@item.Text</option>
                                    }
                                </select>
                            </div>
                            <div class="col-2">
                                <a class="btn btn-primary" asp-action="create" asp-controller="tabletype" asp-area="Admin" asp-route-returnUrl="~/admin/Table/create" target="_blank">
                                    <i class="bi bi-plus-lg"></i>
                                </a>
                            </div>

                        </div>
                        <span asp-validation-for="Table_Type_Id" class="text-danger"></span>
                    </div>


                    <div class="col-md-12 text-end">
                        <button type="reset" class="btn btn-danger me-3">Clear</button>
                        <button type="submit" class="btn btn-primary">Create</button>
                    </div>
                </form><!-- Vertical Form -->
            </div>
        </div>
    </div>
</div>