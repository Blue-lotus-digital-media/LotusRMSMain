@{
}

<style>
    .statusToggle{

    font-size:1.8rem;
    vertical-align:-0.4em; 
    }
    
    .statusToggleOn {
        color: #0b5ed7;
        }
        
        .statusToggleOff {
        color: #808080;
        }
    
    
    .title{
        font-size:2rem;
    }
    
    tbody tr {
          vertical-align: middle;
    }
    
</style>


<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-body mt-3">

                <div class="d-flex justify-content-between px-10 mb-1">
                    <div>
                        <a asp-area="Admin" asp-action="Create" asp-controller="Table" class="btn btn-primary">Create</a>
                    </div>
                    <div class="title">Table list</div>
                    <div class="exportBtns">
                        <form enctype="multipart/form-data" asp-area="Admin" asp-controller="Table" asp-action="ExportToExcel">
                            <input class="btn btn-primary" type="submit" value="Excel"/>

                        </form>

                    </div>
                </div>

                <div class="p-1 border rounded">
                    <table id="tblData" class="table table-striped table-bordered" style="width:100%">
                        <thead class="thead-dark">
                        <tr class="table-info">
                            <th>
                                Table Name
                            </th>
                            <th>
                                Table No.
                            </th>
                            <th>
                                No. of Chairs.
                            </th>
                            <th>
                                Type
                            </th>
                            <th>
                                Reservation
                            </th>

                            <th>
                                Status
                            </th>
                            <th>
                                Action
                            </th>
                            <th>
                                <a asp-area="Admin" asp-action="downloadallqr" asp-controller="table" onclick="Event.preventDefault(); ">Download Table QR</a>
                            </th>

                        </tr>

                        </thead>
                    </table>
                </div>

            </div>
        </div>
    </div>
</div>

@section Scripts{
    <script src="~/js/table.js"></script>
    <script src="https://cdn.datatables.net/rowreorder/1.4.1/js/dataTables.rowReorder.min.js"></script>
    <script src="https://cdn.datatables.net/responsive/2.5.0/js/dataTables.responsive.min.js"></script>
}