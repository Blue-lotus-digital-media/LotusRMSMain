@using LotusRMS.Models.Viewmodels.Category
@model CreateCategoryVM
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
}

<div class="row">
    <div class="col-lg-6">
        <div class="card">
            <div class="card-body">
                <h5 class="card-title">Add Product Category</h5>
                <!-- Vertical Form -->
                <form class="row g-3" asp-action="Create" asp-controller="category" asp-area="admin" asp-route-returnUrl="@ViewBag.ReturnUrl">
                    <div class="col-12">
                        <label for="cName" class="form-label">Category Name</label>
                        <input asp-for="Category_Name" class="form-control" id="cName">
                        <span asp-validation-for="Category_Name" class="text-danger"></span>
                    </div>
                    <div class="col-12">
                        <label for="dText" class="form-label">Description</label>
                        <textarea asp-for="Category_Description" class="form-control" id="dText"> </textarea>

                        <span asp-validation-for="Category_Description" class="text-danger"></span>
                    </div>
                    <div class="col-12">
                        <label for="typeText" class="form-label">Type</label>
                        <div class="row">
                            <div class="col-10">

                                <select asp-for="Type_Id" class="form-control" id="typeText">
                                    <option>--Select a type--</option>
                                    @foreach (var item in Model.TypeList)
                                    {
                                        <option value="@item.Value">@item.Text</option>
                                    }
                                </select>
                            </div>
                            <div class="col-2">
                                <a class="btn btn-primary" asp-action="create" asp-controller="type" asp-area="admin" asp-route-returnUrl="~/admin/category/create"><i class="bi bi-plus-lg"></i></a>
                            </div>

                        </div>
                        <span asp-validation-for="Type_Id" class="text-danger"></span>
                    </div>


                    <div class="col-12 d-flex ">
                        <button type="reset" class="btn btn-danger mx-2">Clear</button>
                        <button type="submit" class="btn btn-primary mx-2">Add</button>
                    </div>
                </form><!-- Vertical Form -->
            </div>
        </div>
    </div>
</div>


