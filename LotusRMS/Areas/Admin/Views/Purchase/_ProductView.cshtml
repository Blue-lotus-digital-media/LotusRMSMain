
<div class="d-flex justify-content-between px-10">
    <div class="title">Product List</div>
    <a asp-area="admin" asp-action="upcreate" asp-controller="product" class="btn btn-primary" target="_blank">Add New</a>

</div>

<div class="p-4 border rounded">
    <table id="productData" class="table table-striped table-bordered" style="width:100%">
        <thead class="thead-dark">
            <tr class="table-info">
                <th>
                    Name
                </th>
                <th>
                    Unit
                </th>
                <th>
                    Type
                </th>
                <th>
                    Category
                </th>
                
                <th>
                    Action
                </th>

            </tr>

        </thead>
    </table>
</div>
<div class="modal fade" id="productPurchaseModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="pItemName"></h5>
                <input type="text" hidden id="pId">
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <div class="row">
                    <div class="col-md-5">Quantity</div>
                    <div class="col-md-5">
                        <input type="number" class="form-control" id="pQuantity" min="1" value="1" onkeyUp="CalculatePTotal();">
                    </div>
                    <div class="col-md-2">
                        <input type="text" class="form-control-plaintext" readonly id="pUnit" >
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-5">Rate</div>
                    <div class="col-md-7">
                        <input type="number" class="form-control" id="pRate" min="1" onkeyUp="CalculatePTotal();">
                    </div>
                </div>  
                <div class="row">
                    <div class="col-md-5">Rate</div>
                    <div class="col-md-7">
                        <input type="number" class="form-control" id="pTotal" min="1" readonly>
                    </div>
                </div>

            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                <button type="button" class="btn btn-primary" onclick="addProduct()">Save changes</button>
            </div>
        </div>
    </div>
</div>