@using LotusRMS.Models.Viewmodels.Today;
@model IEnumerable<TodayTableVM>

@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
}

<style>

    .table-field-set {
        width: fit-content;
        display: inline-block;
    }

    .opening-balance {
        vertical-align:center;
    }
</style>

<div class="bg-white shadow p-3 ">

@foreach (var item in Model)

{
    <fieldset class="border border-3 p-2 table-field-set me-3 mb-3">
        <legend class="float-none w-auto" align="center">@item.Type.Type_Name</legend>
        <div class="table-list d-flex gap-3 flex-wrap">
            @foreach (var table in item.Table)
            {
                if (table.IsReserved)
                {
                    <a class="card px-2 mb-0 bg-danger" style="min-width:5rem;" asp-route-TableId="@table.Table_Id" asp-route-TypeId="@item.Type.Id" asp-area="order" asp-controller="home" asp-action="index">

                        <div class=" d-flex flex-column py-0 text-white align-items-center">
                            <span class="fs-5">@table.Table_Name</span>
                            <span>
                               
                                <span class="fs-5">@table.Transaction</span>
                                <span class="">/-</span>
                            </span>
                        </div>



                    </a>
                }
                else
                {
                    <a class="card px-2 mb-0 bg-primary" style="min-width:5rem;" asp-route-TableId="@table.Table_Id" asp-route-TypeId="@item.Type.Id" asp-area="order" asp-controller="home" asp-action="index">

                        <div class="d-flex flex-column py-0 text-white  align-items-center">
                            <span class="fs-5">@table.Table_Name</span>
                            <span class="fs-5">@table.Transaction</span>
                        </div>



                    </a>
                }
            }

        </div>
    </fieldset>


}
</div>




