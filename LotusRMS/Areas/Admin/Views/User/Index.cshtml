@using LotusRMS.Models.Viewmodels.User;
@model IEnumerable<UserRolesVM>

@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
}

@*<a class="btn btn-info" asp-area="Identity" asp-page="/account/register" asp-route-returnurl="/admin/user">Create User</a>*@
<div class="card pt-3">
    <div class="card-body">

<a class="btn btn-info" asp-area="" asp-controller="account"asp-action="register" asp-route-returnurl="/admin/user">Create User</a>
<table class="table table-striped">
    <thead>
        <tr>
            <th>First Name </th>
            <th>Middle Name </th>
            <th>Last Name </th>
            <th>Contact </th>
            <th>Email </th>
            <th>Role </th>
            <th>Action</th> 


        </tr>
    </thead>
    <tbody>
        @foreach(var user in Model)
        {
            <tr>
                <td>@user.FirstName</td>
                <td>@user.MiddleName</td>
                <td>@user.LastName</td>
                <td>@user.Contact</td>
                <td>@user.Email</td>
                <td>@string.Join(" , ", user.Roles.ToList())</td>
                <td>
                    <a class="btn btn-primary" asp-controller="User" asp-action="ManageRole" asp-route-userId="@user.UserId">Manage Roles</a>

                    <a class="btn btn-primary" asp-controller="User" asp-action="InviteAgain" asp-route-userId="@user.UserId">
                        Invite again</a>
                    <button type="button" class="btn btn-primary"><i class="bi bi-pencil-square"></i></button>
                    <button type="button" class="btn btn-danger"><i class="bi bi-trash"></i></button>
                </td>
            </tr>
        }
    </tbody>
</table>
</div>
</div>  