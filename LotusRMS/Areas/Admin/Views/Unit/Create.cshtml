@{

}

<div class="row">
    <div class="col-md-6 ">
        <div class="card">
            <div class="card-body">
                <h5 class="card-title">Add Product Unit</h5>
                <form class="form" asp-action="create" asp-controller="Unit" asp-area="admin" asp-route-returnUrl="@ViewBag.ReturnUrl">
                    <div class="form-group mb-3">
                        <label for="pUnitName" class="mb-1">Unit Name</label>
                        <input asp-for="Name" class="form-control" placeholder="eg. Kilogram" id="pUnitName" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                    <div class="form-group mb-3">
                        <label for="pUnitSymbol" class="mb-1">Unit Symbol</label>
                        <input asp-for="Unit_Symbol" class="form-control" placeholder="eg. k" id="pUnitSymbol" />
                        <span asp-validation-for="Unit_Symbol" class="text-danger"></span>
                    </div>
                    <div class="form-group mb-3">
                        <label for="pUnitDesc" class="mb-1">Unit Description</label>
                        <input asp-for="Unit_Description" class="form-control" placeholder="Write short discription of unit.." id="pUnitDesc" />
                        <span asp-validation-for="Unit_Description" class="text-danger"></span>
                    </div>
                    <div class="d-flex">
                        <button type="reset" class="btn btn-danger mx-2">Clear</button>
                        <button type="submit" class="btn btn-primary mx-2">Add</button>
                    </div>
                </form>
            </div>
        </div>

    </div>
</div>
