@{

}

<div class="row">
    <div class="col-md-6 ">
        <form class="form" asp-action="create" asp-controller="Unit" asp-area="admin" asp-route-returnUrl="@ViewBag.ReturnUrl">
        <div class="form-group">
            <label >Unit Name</label>
            <input asp-for="Name" class="form-control" pplaceholder="eg. Kilogram"/>
            <span asp-validation-for="Name" class="text-danger" ></span>
        </div>
        <div class="form-group">
            <label >Unit Symbol</label>
            <input asp-for="Unit_Symbol" class="form-control" placeholder="eg. k"/>
            <span asp-validation-for="Unit_Symbol" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label >Unit Description</label>
            <input asp-for="Unit_Description" class="form-control" placeholder="Write short discription of unit.."/>
            <span asp-validation-for="Unit_Description" class="text-danger"></span>
        </div>
        <div class="d-flex">
            <button type="reset" class="btn btn-danger mx-2">Clear</button>  
            <button type="submit" class="btn btn-primary mx-2">Add</button>  
        </div>
        </form>

    </div>
</div>
