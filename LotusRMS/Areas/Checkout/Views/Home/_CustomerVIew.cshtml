@using LotusRMS.Models.Viewmodels.Checkout;
@model CustomerCheckOutVM
<style>
    .selectedCustomer,
    .selectedCustomer:active{
        background-color:brown;
        color:white;
    }.selectedCustomer:hover{
        background-color:coral;
        color:black;
    }
</style>
<div class="p-4 border rounded">
    <table id="tblData" class="table table-striped table-bordered" style="width:100%">
        <thead class="thead-dark">
            <tr class="table-info">
                <th>
                    Name
                </th>
                <th>
                    Address
                </th>
                <th>
                    Contact
                </th>
                <th>
                    PAN / VAT
                </th>
                <th>
                    Due Amount
                </th>
                <th>
                    Select
                </th>

            </tr>

        </thead>
    </table>
</div>
<script>

    function loadData() {

        console.log("in loaddata here ");
        dataTable = $("#tblData").DataTable({
            "ajax": {

                "url": "/checkout/Home/GetAllCustomer",
                /*"success": function (data) {
                    console.log(data);
                }*/
            },
            /* columnDefs: [{
                 "defaultContent": "-",
                 "targets": "_all"
             }],*/
            "columns": [

                {
                    data: "name",
                    render: function (data) {
                        return `<div class="name">
                                         ${data}
                                        </div>`;
                    }
                },
                {
                    data: "address",
                    render: function (data) {
                        return `<div class="address">
                                             ${data}
                                            </div>`;
                    }
                },
                {
                    data: "contact",
                    render: function (data) {
                        return `<div class="contact">
                                             ${data}
                                            </div>`;
                    }
                },
                {
                    data: "panOrVat",
                    render: function (data) {
                        return `<div class="panOrVat">
                                             ${data}
                                            </div>`;
                    }

                },
                {
                    data: "due",
                    render: function (data) {
                        return `<div class="due">
                                             ${data}
                                            </div>`;
                    }

                },
                {
                    data: "id",

                    render: function (data) {
                        return `<div class="text-center">
                                     <button type="button" class="btn btn-info selectCustomerBtn " id="${data}" onclick="selectCustomer(this)">select</button>

                                    </div>`;
                    }
                }

            ],
            searching: true,


        });
    }

</script>