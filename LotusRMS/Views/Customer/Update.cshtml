@using LotusRMS.Models.Viewmodels.Customer;
@model UpdateCustomerVM

@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
}
<div class="row">
<div class="col-md-6">
    <div class="card">
        <div class="card-body">
            <h5 class="card-title">Update Customer Detail</h5>

            <!-- General Form Elements -->
                <form class="row g-3 bordered" asp-action="Update" asp-area="" asp-controller="Customer">
                <div class="col-md-12">
                    <label for="name" class="form-label">Customer Name</label>
                   
                        <input asp-for="Name" class="form-control" id="name">
                        <input asp-for="Id" class="form-control" hidden>
                        <span asp-validation-for="Name" class="text-danger"></span>
               

                </div>
                    <div class="col-md-12">
                    <label for="address" class="form-label">Customer Address</label>
                
                        <input asp-for="Address" class="form-control" id="address">
                        <span asp-validation-for="Address" class="text-danger"></span>
                  

                </div>
                    <div class="col-md-12">
                    <label for="contact" class="form-label">Customer Contact</label>
                  
                        <input asp-for="Contact" class="form-control" id="contact">
                        <span asp-validation-for="Contact" class="text-danger"></span>
                  
                </div>
                    <div class="col-md-12">
                    <label for="panorvat" class="form-label">PAN or VAT</label>
                   
                        <input asp-for="PanOrVat" class="form-control" id="panorvat">
                        <span asp-validation-for="PanOrVat" class="text-danger"></span>
                 
                </div>
                    <div class="col-md-12">
                    <label for="due" class="form-label">Previous Due Amount</label>
                   
                        <input asp-for="DueAmount" class="form-control" id="due" disabled>
                        <span asp-validation-for="DueAmount" class="text-danger"></span>
                   
                </div>



                    <div class="col-md-12 text-end">

         
                        <button type="submit" class="btn btn-primary">Update</button>

                    </div>
            </form><!-- End General Form Elements -->
        </div>
    </div>
</div>

</div>