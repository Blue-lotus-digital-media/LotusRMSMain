@{
}

<style>
    .statusToggle {
        color: blue;
        font-size: 30px;
    }
</style>

<div class="d-flex justify-content-between px-10">
    <a asp-area="" asp-action="Create" asp-controller="Supplier" class="btn btn-primary">Create</a>
    <div class="title">Supplier List</div>
    <div class="exportBtns">
        <form enctype="multipart/form-data" asp-area="" asp-controller="supplier" asp-action="ExportToExcel">
            <input class="btn btn-primary" type="submit" value="Excel" />

        </form>

    </div>
</div>

<div class="p-4 border rounded">
    <table id="tblData" class="table table-striped table-bordered" style="width:100%">
        <thead class="thead-dark">
            <tr class="table-info">
                <th>
                    Name
                </th>
                <th>
                    Address
                </th>
                <th>
                    Contact
                </th>
                <th>
                    Contact 2
                </th>
                <th>
                    PAN or VAT
                </th>
                <th>
                    Status
                </th>
                <th>
                    Action
                </th>

            </tr>

        </thead>
    </table>
</div>

@section Scripts{
    <script src="~/js/supplier.js"></script>
}


